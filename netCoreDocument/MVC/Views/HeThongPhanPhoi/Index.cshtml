@model IEnumerable<MVC.Models.HeThongPhanPhoi>

@{
    ViewData["Title"] = "Danh sách hệ thống phân phối";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaHTPP)</th>
            <th>@Html.DisplayNameFor(model => model.TenHTPP)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHTPP</td>
                <td>@item.TenHTPP</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHTPP" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaHTPP" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
