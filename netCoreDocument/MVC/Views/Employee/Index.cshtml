@model IEnumerable<MVC.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>
<p>
    <a asp-action="Create">Create New Employee</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>PersonId</th>
            <th>Full Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>EmployeeId</th>
            <th>Age</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonId</td>
            <td>@item.FullName</td>
            <td>@item.Address</td>
            <td>@item.PhoneNumber</td>
            <td>@item.EmployeeId</td>
            <td>@item.Age</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonId" class="btn btn-sm btn-warning">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
